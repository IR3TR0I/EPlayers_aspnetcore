@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<form method="POST" action='@Url.Action("Cadastrar")'>
    <label>ID</label>
    <input type="text" name="Nome"/>

    <label>Nome</label>
    <input type="text" name="Nome" />

    <label>Imagem</label>
    <input type="text" name="Imagem" />

    <button type="submit">Cadastrar</button>    
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
    </thead>
    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src= "/img/Equipes/@equipe,Imagem" alt="Imagem da equipe @equipe.Nome" width="40"></td>
                <td><a asp-area="Link para Excluir uma Equipe" asp-controller="Equipe" asp-action="Excluir" asp-route-id=""></a></td>
            </tr>
        }
    </tbody>
</table>